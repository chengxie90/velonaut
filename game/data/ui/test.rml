<template name="hostrace">
	<div id="menu_join_race" class="wrp_menu menu_host_race">
		<div class="inner">
			<h1 class="submenu_title" >Host a new game</h1>
			<div class="col_left">
				<p class="hostedby">
					<span class="label">Hosted by: </span><span class="host">Player1</span>
				</p>
				<p class="ipaddress">
					<span class="label">IP address: </span><span class="ip">123.56.23.78</span>
				</p>

				<div class="playerlist">
					<h2 class="title" >Current Players  (4/6)</h2>
					<ul>
						<li class="listitem">Player 1</li>
						<li class="listitem">Player 2</li>
						<li class="listitem">Player 3</li>
						<li class="listitem">Player 4</li>
					</ul>
				</div>
			</div>
			<div class="col_right">
				<div class="status">Waiting for players...</div>
			</div>
		</div>
	</div>
</template>